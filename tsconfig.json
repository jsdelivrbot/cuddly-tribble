{
  "compilerOptions": {
    "target": "ES5",
    "module": "system",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules",
    "jspm_packages"
  ],
  "filesGlob": [
    "app/**/*.ts",
    "./typings/**/*.ts"
  ],
  "files": [
    "app/app.ts",
    "app/bootstrap.ts",
    "app/core/store/store.ts",
    "./typings/immutable.d.ts",
    "./typings/rx.all.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
