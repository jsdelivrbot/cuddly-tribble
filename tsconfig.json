{
  "compilerOptions": {
    "target": "ES5",
    "module": "system",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules",
    "jspm_packages",
    "typings/main.d.ts",
    "typings/main"
  ],
  "filesGlob": [
    "app/**/*.ts",
    "typings/browser.d.ts"
  ],
  "files": [
    "app/actions/actions.ts",
    "app/actions/games.actions.ts",
    "app/bootstrap.ts",
    "app/game-app.ts",
    "app/game/games.ts",
    "app/reducers/games.ts",
    "app/reducers/reducers.ts",
    "app/reducers/visibility-filter.ts",
    "typings/browser.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
